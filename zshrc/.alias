# SHELL
alias c="clear"
alias x="exit"
alias r="exec ${SHELL} -l"
alias b="btop"
alias ss="cmatrix -s"
alias aa="v ~/.arch-dotfiles/zshrc/.alias"
alias zz="v ~/.zshrc"
alias ls="ls --color"
alias l="ls -ahl"
alias ll="ls -l"
alias y="yazi"
alias path="echo $PATH | tr ':' '\n' | nl"

# HYRPRLAND
alias rwaybar="killall waybar && waybar & disown"
alias rpaper="killall hyprpaper && hyprpaper & disown"

# SCREENSAVER
alias m="cmatrix -s"
alias mb="cmatrix -s -C blue"

# TMUX
alias t="tmux"
alias ta="t attach -t"
alias td="t detach"
alias tl="t ls"
alias tn="t new -s"
alias tk="t kill-session -t"

# ALIAS
alias chrome="google-chrome-stable & disown"
alias spotify="spotify-launcher & disown"
alias discord="discord & disown"
alias slack="slack & disown"
alias v="nvim"

# MACHINES
alias rubik='ssh rubik'
alias prometheus='ssh prometheus'
alias truenas="ssh truenas"
alias alien='ssh alien'
alias vedesvps='ssh -i ~/.ssh/id_ed25519_vedesvps edo@vedesvps'
alias thestarter='ssh -i ~/.ssh/id_ed25519_thestarter thestarter@thestarter'
alias k21='ssh edo@k21'
alias k22='ssh edo@k22'
alias k23='ssh edo@k23'
alias k24='ssh edo@k24'
alias k25='ssh edo@k25'
alias k26='ssh edo@k26'
alias k27='ssh edo@k27'
alias k28='ssh edo@k28'

# SPEEDTEST
alias speed="speedtest --secure"

# GIT
alias gll="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias gsl="git stash list"
alias gs="git status"
alias gc="git commit"
alias gd="git diff"
alias gfo="git fetch origin"
alias gpom="git pull origin main"
alias gpo="git pull origin"
alias lg="lazygit"

# DOCKER
alias dps='docker ps --format "table {{.ID}}\t{{.Names}}\t{{.RunningFor}}\t{{.Status}}"'
alias dpa='docker ps -a --format "table {{.ID}}\t{{.Names}}\t{{.RunningFor}}\t{{.Status}}"'
alias dcu='docker compose up'
alias dcd='docker compose down --remove-orphans'
alias di='docker images'
alias ddf='docker system df'
